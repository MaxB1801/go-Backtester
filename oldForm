	app := tview.NewApplication()

	// Define the options
	options := []string{"Core Acc", "Core Dis", "Mid"}

	// Create a Form
	form := tview.NewForm()

	// Variable to hold the selected option
	selectedOption := ""

	// Add radio button-like fields (use DropDown to simulate radio buttons)
	form.AddDropDown("Options", options, -1, func(option string, optionIndex int) {
		selectedOption = option
	})

	// Center the form and set the title
	form.SetBorder(true).SetTitle("Select Option").SetTitleAlign(tview.AlignCenter)

	// // Add a button to submit the form
	// form.AddButton("Submit", func() {
	// 	fmt.Printf("Selected Option: %s\n", selectedOption)
	// 	app.Stop()
	// })

	// // Add a button to quit the application
	// form.AddButton("Quit", func() {
	// 	app.Stop()
	// })

	// Center the form and set the title
	form.SetBorder(true).SetTitle("Select Option").SetTitleAlign(tview.AlignCenter)

	// Set up the application root and run it
	if err := app.SetRoot(form, true).EnableMouse(true).Run(); err != nil {
		panic(err)
	}

	fmt.Println(selectedOption)